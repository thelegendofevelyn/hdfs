<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>

		<!-- This port will be assigned - wildcard ip makes it work on every machine -->

		<name>dfs.datanode.address</name>

		<value>0.0.0.0:50012</value>

	</property>


	<property>

		<!-- Assigned port - where you will be able to reach it via a webapp - useful for tracking down datanode failures -->

		<name>dfs.datanode.http.address</name>

		<value>0.0.0.0:50050</value>

	</property>


	<property>

		<!-- Assigned port for internal communications -->

		<name>dfs.datanode.ipc.address</name>

		<value>0.0.0.0:50020</value>

	</property>



	<property>

		<!-- same namenode as specified in core-site.xml, will be assigned along with ports.  This is the web interface for HDFS - make sure you modify the value!! -->

		<name>dfs.namenode.http-address</name>

		<value>10.30.1.XX:50070</value>

	</property>


	<property>

		<!-- Make sure everything is stored locally, in individual locations -->

		<name>nfs.dump.dir</name>

		<value>/tmp/.${user.name}-hdfs-nfs</value>

	</property>


	<property>

		<!-- Make sure everything is stored locally, in individual locations -->

		<name>dfs.namenode.name.dir</name>

		<value>/tmp/namenode-${user.name}</value>

	</property>


	<property>

		<!-- Make sure everything is stored locally, in individual locations -->

		<name>dfs.datanode.data.dir</name>

		<value>/tmp/datanode-${user.name}</value>

	</property>


	<property>

		<!-- Backup namenode makes HDFS happy - make sure different from first namenode, machine/port will be assigned (will need to modify the value!)-->

		<name>dfs.namenode.secondary.http-address</name>

		<value>10.30.1.XX:50090</value>

	</property>



	<!-- May have fixed -->

	<!--        <property>

                <name>dfs.namenode.datanode.registration.ip-hostname-check</name>

                <value>false</value>

        </property> -->

</configuration>
